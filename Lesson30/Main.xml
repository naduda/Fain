<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import fxmltableview.*?> 
<?import javafx.scene.control.cell.*?> 
<?import javafx.collections.*?> 

<BorderPane prefHeight="200" xmlns:fx="http://javafx.com/fxml" fx:controller="ua.pr.conf.controller.MainController" styleClass="root">
	<top>
	   <ToolBar>
	   		<Button text="Search" prefWidth="75" onAction="#handleSubmitButtonAction" styleClass="buttonM"/>
	   		<Button text="Settings" prefWidth="75" onAction="#handleSubmitButtonAction" styleClass="buttonM"/>
	   		<Button text="Monitor" prefWidth="75" onAction="#handleSubmitButtonAction" styleClass="buttonM"/>
	   		<ComboBox fx:id="cbTypeDevice" prefWidth="100" styleClass="comboBoxM"/>
	   		<Button text="Read" prefWidth="75" onAction="#handleSubmitButtonAction" styleClass="buttonM"/>
	   		<Button text="Write" prefWidth="75" onAction="#handleSubmitButtonAction" styleClass="buttonM"/>
	   		<Button text="Exit" prefWidth="75" onAction="#exitButtonAction" styleClass="buttonM"/>
	   </ToolBar>
	</top>
	
	<center>
		<TableView fx:id="tableView" styleClass="table">
			<columns>
	          <TableColumn text="Type" prefWidth="150">
	          	<cellValueFactory>
	          		<PropertyValueFactory property="typeProperty" />
	          	</cellValueFactory>
	          </TableColumn>
	          <TableColumn text="Address" prefWidth="150">
	          	<cellValueFactory>
	          		<PropertyValueFactory property="addressProperty" />
	          	</cellValueFactory>
	          </TableColumn>
	          <TableColumn text="Serial number" prefWidth="150">
	          	<cellValueFactory>
	          		<PropertyValueFactory property="serialNumberProperty" />
	          	</cellValueFactory>
	          </TableColumn>
	          <TableColumn text="Speed" prefWidth="150">
	          	<cellValueFactory>
	          		<PropertyValueFactory property="speedProperty" />
	          	</cellValueFactory>
	          </TableColumn>
		    </columns>
    	</TableView>
	</center>
		
	<bottom>
		<ToolBar>
	   		<Label text="Status bar" />
	   </ToolBar>
	</bottom>
	
	<stylesheets>
		<URL value="@MainFRM.css" />
	</stylesheets>
</BorderPane>