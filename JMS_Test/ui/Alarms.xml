<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.collections.*?>
<?import fxmltableview.*?> 
<?import javafx.scene.control.cell.*?> 

<Pane fx:id="bpAlarms" xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.AlarmController" style="-fx-background-color: red;">	
	<BorderPane prefWidth="${bpAlarms.width}">
		<top>
			<ToolBar>
				<Label text="Сигналізація"/>
				<Button text="" onAction="#kvitOne" styleClass="toolBarButton">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<Image url="@../Icon/kvitOne.png"/>
						</ImageView>
					</graphic>
				</Button>
				<Button text="" onAction="#kvitPS" styleClass="toolBarButton">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<Image url="@../Icon/kvitPS.png"/>
						</ImageView>
					</graphic>
				</Button>
				<Button text="" onAction="#kvitAll" styleClass="toolBarButton">
					<graphic>
						<ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
							<Image url="@../Icon/kvitAll.png"/>
						</ImageView>
					</graphic>
				</Button>
				<Separator/>
				<Label text="Пріоритет"/>
				<ChoiceBox fx:id="cbPriority">
					<items>
						<FXCollections fx:factory="observableArrayList">
							<String fx:value="Будь-який"/>
						</FXCollections>
					</items>
					<value>
						<String fx:value="Будь-який" />
					</value>
				</ChoiceBox>
			</ToolBar>
		</top>
		<center>
			<TableView fx:id="tvAlarms" styleClass="table">
				<columns>
					<TableColumn id="pObject" text="Об'єкт" />
					<TableColumn id="pLocation" text="Розміщення" />
					<TableColumn id="pAlarmName" text="Сигналізація" />
					<TableColumn id="pRecordDT" text="Дата збереження" />
					<TableColumn id="pEventDT" text="Дата події" />
					<TableColumn id="pAlarmMes" text="Повідомлення" />
					<TableColumn id="pLogState" text="Стан" />
					<TableColumn id="pConfirmDT" text="Дата квітування" />
					<TableColumn id="pUserRef" text="Користувач" />
					<TableColumn id="pLogNote" text="Примітка" />
					<TableColumn id="pAlarmPriority" text="Пріоритет" />
					<TableColumn id="pEventType" text="Тип події" />
					<TableColumn id="pSchemeObject" text="Об'єкт схеми" />
				</columns>
			</TableView>
		</center>
	</BorderPane>
</Pane>